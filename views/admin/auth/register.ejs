<%- contentFor('admin_auth') %>
<div class="card">
    <div class="card-body register-card-body">
        <p class="login-box-msg">Register a new membership</p>

        <form action="register" method="post">
            <div class="input-group mb-3">
                <input type="text" name="name" value="<%= user.name ? user.name : '' %>"
                       class="form-control<%= errors && errors.name ? ' is-invalid' : '' %>"
                       placeholder="Full name" required>
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-user"></span>
                    </div>
                </div>
                <% if(errors && errors.name) { %>
                    <div class="invalid-feedback">
                        <%= errors.name %>
                    </div>
                <% } %>
            </div>
            <div class="input-group mb-3">
                <input type="email" name="email" value="<%= user.email ? user.email : '' %>"
                       class="form-control<%= errors && errors.email ? ' is-invalid' : '' %>" placeholder="Email"
                       required>
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope"></span>
                    </div>
                </div>
                <% if(errors && errors.email) { %>
                    <div class="invalid-feedback">
                        <%= errors.email %>
                    </div>
                <% } %>
            </div>
            <div class="input-group mb-3">
                <input type="password" name="password"
                       class="form-control<%= errors && errors.password ? ' is-invalid' : '' %>" placeholder="Password"
                       required>
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
                <% if(errors && errors.password) { %>
                    <div class="invalid-feedback">
                        <%= errors.password %>
                    </div>
                <% } %>
            </div>
            <div class="input-group mb-3">
                <input type="password" name="confirm_password"
                       class="form-control<%= errors && errors.confirm_password ? ' is-invalid' : '' %>"
                       placeholder="Retype password"
                       required>
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
                <% if(errors && errors.confirm_password) { %>
                    <div class="invalid-feedback">
                        <%=errors.confirm_password%>
                    </div>
                <% } %>
            </div>
            <div class="row">
                <div class="col-8">
                    <div class="icheck-primary">
                        <input type="checkbox" id="agreeTerms" name="terms" value="agree">
                        <label for="agreeTerms">
                            I agree to the <a href="#">terms</a>
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-4">
                    <button type="submit" class="btn btn-primary btn-block">Register</button>
                </div>
                <!-- /.col -->
            </div>
        </form>

        <div class="social-auth-links text-center">
            <p>- OR -</p>
            <a href="#" class="btn btn-block btn-primary">
                <i class="fab fa-facebook mr-2"></i>
                Sign up using Facebook
            </a>
            <a href="#" class="btn btn-block btn-danger">
                <i class="fab fa-google-plus mr-2"></i>
                Sign up using Google+
            </a>
        </div>

        <a href="login" class="text-center">I already have a membership</a>
    </div>
    <!-- /.form-box -->
</div><!-- /.card -->